//- views/_layout.pug
doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/css/style.css')
    link(rel='shortcut icon', type='image/png', href='/img/favicon.png')
    title TravelSaga India| #{title}
    
    // This block allows child templates to add items (like CSS files) to the <head>
    block head

  body
    // HEADER
    header.header
      nav.nav.nav--tours
        a.nav__el(href='/') TRAVEL SAGA INDIA
      .header__logo
        img(src='/img/logo-white.png', alt='Natours logo')
      nav.nav.nav--user
        if user
          a.nav__el.btn.btn--logout Log out
          a.nav__el(href='/me')
            img.nav__user-img(src=`/img/users/${user.photo}`, alt=`Photo of ${user.name}`)
            span= user.name.split(' ')[0]
        else
          a.nav__el(href='/login') Log in
          a.nav__el.nav__el--cta(href='/signup') Sign up

    // CONTENT
    block content
      h1 This is a placeholder heading

    // FOOTER
    footer.footer
      .footer__logo
        img(src='/img/logo-green.png', alt='Natours logo')
      ul.footer__nav
        li: a(href='#') About us
        li: a(href='#') Download apps
        li: a(href='#') Become a guide
        li: a(href='#') Careers
        li: a(href='#') Contact
      p.footer__copyright Â© by PRANATHI G R.

    //- JAVASCRIPT
    //- login.js is included on every page for global functionality like logout.
    script(src='/js/login.js')
    
    //- This is an empty placeholder block. 
    //- The tour.pug template will add its specific scripts here.
    block scripts